@model TicketMangment.ViewModel.TicketCreatViewModel


@{
    ViewBag.Title = "Create Ticket";

}

    <form enctype="multipart/form-data" asp-controller="ticket" asp-action="Create" method="post" class="m-3">
        <div class="form-group row">
            <label asp-for="Subject" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Subject" class="form-control" placeholder="Ticket Subject" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="RequestDetail" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <textarea asp-for="RequestDetail" class="form-control" placeholder="Request details"></textarea>
                <span asp-validation-for="RequestDetail" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Location" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Location" class="form-control" placeholder="Location" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="DepartmentId" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select class="form-control" asp-for="DepartmentId" asp-items="@ViewBag.departments">
                    <option value="">Please select one</option>
                </select>
                <span asp-validation-for="DepartmentId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="PriorityId" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select class="form-control" asp-for="PriorityId" asp-items="@ViewBag.priorites">
                    <option value="">Please select one</option>
                </select>
                <span asp-validation-for="PriorityId" class="text-danger"></span>
            </div>
        </div>

        @*<div class="form-group row">
            <label asp-for="AssignedTo" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select class="form-control" asp-for="AssignedTo" asp-items="@ViewBag.Users">
                    <option>Please select one</option>
                </select>
                <span asp-validation-for="AssignedTo" class="text-danger"></span>
            </div>
        </div>*@

        <div class="form-group row">
            <label asp-for="NoteBody" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <textarea asp-for="NoteBody" class="form-control" placeholder="Note details"></textarea>
                <span asp-validation-for="NoteBody" class="text-danger"></span>
            </div>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>

    </form>