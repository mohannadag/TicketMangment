                        <i class="zmdi zmdi-balance"></i> <span>Departments</span>
                    </a>
                </li>

                <li>
                    <a asp-controller="priority" asp-action="Index">
                        <i class="zmdi zmdi-assignment-alert"></i> <span>Priorites</span>
                    </a>
                </li>

