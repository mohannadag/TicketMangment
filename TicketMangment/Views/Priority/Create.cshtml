@model Priority

@{
    ViewBag.Title = "Create Priority";

}

<form enctype="multipart/form-data" asp-controller="priority" asp-action="Create" method="post" class="m-3">

    <div class="form-group row">
        <label asp-for="PriorityName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="PriorityName" class="form-control" placeholder="Priority name" />
            <span asp-validation-for="PriorityName" class="text-danger"></span>
        </div>
    </div>




    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>

</form>