@model RegisterViewModel

@{
    ViewBag.Title = "User Registration";
    Layout = "~/Views/Account/Shared/_Layout.cshtml";
}

<div class="card card-authentication1 mx-auto my-4">
    <div class="card-body">
        <div class="card-content p-2">
            <div class="text-center">
                <a asp-controller="home" asp-action="index"><img src="~/assets/images/logo-icon.png" alt="logo icon"></a>
            </div>
            <div class="card-title text-uppercase text-center py-3">Sign Up</div>
            <form method="post">
                <div asp-validation-summary="All" class="text-warning"></div>
                <div class="form-group">
                    <label asp-for="Name" class="sr-only"></label>
                    <div class="position-relative has-icon-right">
                        <input asp-for="Name" class="form-control input-shadow" placeholder="Enter Your Name">
                        <div class="form-control-position">
                            <i class="icon-user"></i>
                        </div>

                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="sr-only"></label>
                    <div class="position-relative has-icon-right">
                        <input asp-for="Email" class="form-control input-shadow" placeholder="Enter Your Email ID">
                        <div class="form-control-position">
                            <i class="icon-envelope-open"></i>
                        </div>

                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="sr-only">Password</label>
                    <div class="position-relative has-icon-right">
                        <input asp-for="Password" class="form-control input-shadow" placeholder="Choose Password">
                        <div class="form-control-position">
                            <i class="icon-lock"></i>
                        </div>

                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="sr-only">Password</label>
                    <div class="position-relative has-icon-right">
                        <input asp-for="ConfirmPassword" class="form-control input-shadow" placeholder="Choose Password">
                        <div class="form-control-position">
                            <i class="icon-lock"></i>
                        </div>

                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="CompanyName" class="sr-only"></label>
                    <div class="position-relative has-icon-right">
                        <input asp-for="CompanyName" class="form-control input-shadow" placeholder="Enter Your Company Name">
                        <div class="form-control-position">
                            <i class="icon-user"></i>
                        </div>

                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="CompanyEmail" class="sr-only"></label>
                    <div class="position-relative has-icon-right">
                        <input asp-for="CompanyEmail" class="form-control input-shadow" placeholder="Enter Your Company Email">
                        <div class="form-control-position">
                            <i class="icon-envelope-open"></i>
                        </div>

                        <span asp-validation-for="CompanyEmail" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Address" class="sr-only"></label>
                    <div class="position-relative has-icon-right">
                        <input asp-for="Address" class="form-control input-shadow" placeholder="Enter Your Company Address">
                        <div class="form-control-position">
                            <i class="icon-envelope-open"></i>
                        </div>

                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="CompanyPhoneNumber" class="sr-only"></label>
                    <div class="position-relative has-icon-right">
                        <input asp-for="CompanyPhoneNumber" class="form-control input-shadow" placeholder="Enter Your Company Phone Number">
                        <div class="form-control-position">
                            <i class="icon-envelope-open"></i>
                        </div>

                        <span asp-validation-for="CompanyPhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="icheck-material-white">
                        <input type="checkbox" id="user-checkbox" checked="checked" />
                        <label for="user-checkbox">I Agree With Terms & Conditions</label>
                    </div>
                </div>

                <button type="submit" class="btn btn-light btn-block waves-effect waves-light">Sign Up</button>
                <div class="text-center mt-3">Sign Up With</div>

                <div class="form-row mt-4">
                    <div class="form-group mb-0 col-6">
                        <button type="button" class="btn btn-light btn-block"><i class="fa fa-facebook-square"></i> Facebook</button>
                    </div>
                    <div class="form-group mb-0 col-6 text-right">
                        <button type="submit" class="btn btn-light btn-block"><i class="fa fa-twitter-square"></i> Twitter</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
    <div class="card-footer text-center py-3">
        <p class="text-warning mb-0">Already have an account? <a asp-action="Login"> Sign In here</a></p>
    </div>
</div>

<!--Start Back To Top Button-->
<a href="javaScript:void();" class="back-to-top"><i class="fa fa-angle-double-up"></i> </a>
<!--End Back To Top Button-->
