@model UserViewModel

@{
    ViewData["Title"] = "Edit Profile";
    var photoPath = "~/images/" + (Model.ExistingPhotoPath ?? "noimage.jpg");
}

<div class="mt-3">
    <div>
        <div class="card">
            <div class="card-body">
                <div class="card-title">Edit Your profile</div>
                <hr>
                <form enctype="multipart/form-data" asp-controller="account" asp-action="editprofile" method="post">
                    <input hidden asp-for="@Model.ID" />
                    <input hidden asp-for="@Model.ExistingPhotoPath" />
                    <div class="form-group">
                        <label asp-for="@Model.Name"></label>
                        <input asp-for="@Model.Name" class="form-control" placeholder="Enter Your Name">
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Email"></label>
                        <input asp-for="@Model.Email" class="form-control" disabled>
                    </div>
                    @if (Model.Department != null)
                    {
                        <div class="form-group">
                            <label asp-for="@Model.Department">Department</label>
                            <input asp-for="@Model.Department" class="form-control" disabled>
                        </div>
                    }
                    <div class="form-group">
                        <label asp-for="@Model.NewPassword"></label>
                        <input asp-for="@Model.NewPassword" class="form-control" placeholder="Your new password">
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.OldPassword"></label>
                        <input asp-for="@Model.OldPassword" class="form-control" placeholder="Your old password">
                    </div>
                    <div class="form-group">
                        <label asp-for="Photo"></label>
                        <div>
                            <div class="custom-file">
                                <input asp-for="Photo" class="custom-file-input form-control">
                                <label class="custom-file-label">Click here to change photo</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row col-sm-4 offset-4">
                        <img class="imageThumbnail" style="height:300px; width:auto;" src="@photoPath" asp-append-version="true" />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-light px-5">Update</button>
                        <a asp-action="dashboard" asp-controller="administration" class="btn btn-primary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>