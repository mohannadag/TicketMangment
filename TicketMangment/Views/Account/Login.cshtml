@model LoginViewModel

@{
    ViewBag.Title = "Login User";
    Layout = "~/Views/Account/Shared/_Layout.cshtml";
}

<div class="loader-wrapper"><div class="lds-ring"><div></div><div></div><div></div><div></div></div></div>
<div class="card card-authentication1 mx-auto my-5">
    <div class="card-body">
        <div class="card-content p-2">
            <div class="text-center">
                <a asp-controller="home" asp-action="index"><img src="~/assets/images/logo-icon.png" alt="logo icon"></a>
            </div>
            <div class="card-title text-uppercase text-center py-3">Sign In</div>
            <form method="post">
                <div asp-validation-summary="All" class="text-warning"></div>

                <div class="form-group">
                    <label asp-for="UserName" class="sr-only"></label>
                    <div class="position-relative has-icon-right">
                        <input asp-for="UserName" class="form-control input-shadow" placeholder="Enter Username">
                        <div class="form-control-position">
                            <i class="icon-user"></i>
                        </div>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="sr-only"></label>
                    <div class="position-relative has-icon-right">
                        <input asp-for="Password" class="form-control input-shadow" placeholder="Enter Password">
                        <div class="form-control-position">
                            <i class="icon-lock"></i>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-6">
                        <div class="icheck-material-white">
                            <input asp-for="RememberMe" />
                            <label asp-for="RememberMe"></label>
                        </div>
                    </div>
                    <div class="form-group col-6 text-right">
                        <a href="#">Reset Password</a>
                    </div>
                </div>
                <button type="submit" class="btn btn-light btn-block">Sign In</button>
                <div class="text-center mt-3">Sign In With</div>

                <div class="form-row mt-4">
                    <div class="form-group mb-0 col-6">
                        <button type="button" class="btn btn-light btn-block"><i class="fa fa-facebook-square"></i> Facebook</button>
                    </div>
                    <div class="form-group mb-0 col-6 text-right">
                        <button type="button" class="btn btn-light btn-block"><i class="fa fa-twitter-square"></i> Twitter</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
    <div class="card-footer text-center py-3">
        <p class="text-warning mb-0">Do not have an account? <a asp-action="Register"> Sign Up here</a></p>
    </div>
</div>